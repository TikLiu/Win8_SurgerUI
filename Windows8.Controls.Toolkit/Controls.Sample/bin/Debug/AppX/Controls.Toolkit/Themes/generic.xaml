                            <Thumb x:Name="HorizontalThumb" Background="#FF8989E9" Grid.Column="1" DataContext="{TemplateBinding Value}" Height="{StaticResource SliderTrackThemeHeight}" Grid.Row="1" Style="{StaticResource SliderThumbStyle}" Width="{StaticResource SliderTrackThemeHeight}" BorderBrush="#FFF1F9F6"/>
