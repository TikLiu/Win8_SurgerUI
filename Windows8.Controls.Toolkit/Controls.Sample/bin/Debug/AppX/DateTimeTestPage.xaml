		<Style x:Key="TimerSliderStyle1" TargetType="DateTimeToolkit:TimerSlider">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="DateTimeToolkit:TimerSlider">
						<Grid Margin="0">
							<VisualStateManager.VisualStateGroups>
								<VisualStateGroup x:Name="VisualStateGroup">
									<VisualState x:Name="ShowListTicks">
										<Storyboard>
											<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ScrollViewerTicks">
												<DiscreteObjectKeyFrame KeyTime="0">
													<DiscreteObjectKeyFrame.Value>
														<Visibility>Visible</Visibility>
													</DiscreteObjectKeyFrame.Value>
												</DiscreteObjectKeyFrame>
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ButtonShowTicks">
												<DiscreteObjectKeyFrame KeyTime="0">
													<DiscreteObjectKeyFrame.Value>
														<Visibility>Collapsed</Visibility>
													</DiscreteObjectKeyFrame.Value>
												</DiscreteObjectKeyFrame>
											</ObjectAnimationUsingKeyFrames>
										</Storyboard>
									</VisualState>
									<VisualState x:Name="CollapsedListTicks">
										<Storyboard>
											<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ScrollViewerTicks">
												<DiscreteObjectKeyFrame KeyTime="0">
													<DiscreteObjectKeyFrame.Value>
														<Visibility>Collapsed</Visibility>
													</DiscreteObjectKeyFrame.Value>
												</DiscreteObjectKeyFrame>
											</ObjectAnimationUsingKeyFrames>
										</Storyboard>
									</VisualState>
								</VisualStateGroup>
							</VisualStateManager.VisualStateGroups>
							<Button x:Name="ButtonShowTicks" Style="{StaticResource TimeSliderButtonStyle}" Foreground="#FFFF3366" HorizontalAlignment="Center"/>
							<ScrollViewer x:Name="ScrollViewerTicks"  HorizontalScrollMode="Disabled" VerticalScrollBarVisibility="Hidden" Visibility="Visible" Background="#FFEBEBEB" Width="80" Margin="0" Height="260" VerticalAlignment="Bottom" Style="{StaticResource TimeSliderScrollViewerStyle}">
								<StackPanel x:Name="StackPanelTicks" Grid.Column="1"/>
							</ScrollViewer>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
