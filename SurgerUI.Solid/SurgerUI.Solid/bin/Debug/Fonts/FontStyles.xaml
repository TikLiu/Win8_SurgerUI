<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >


    <Style x:Key="Font-A1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="FontFamily" Value="/Fonts/bariolregular.ttf#Bariol"/>
    </Style>

    <Style x:Key="Font-B1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="/Fonts/bariolregular.ttf#Bariol"/>
    </Style>

	<Style x:Key="Font-B2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="/Fonts/bariolregular.ttf#Bariol"/>
    </Style>
    
</ResourceDictionary>
    

